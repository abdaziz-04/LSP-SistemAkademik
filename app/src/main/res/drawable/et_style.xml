<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DFEFFF"></solid>
            <stroke
                android:width="6px"
                android:color="@color/orange" />
            <corners android:radius="6px" />
        </shape>
    </item>
    <!-- Item untuk shadow -->
    <item
        android:right="4px"
        android:bottom="4px">
        <shape android:shape="rectangle">
            <solid android:color="#33000000"></solid> <!-- Warna bayangan, #33 merupakan transparansi (hex 33 adalah sekitar 20%) -->
            <corners android:radius="6px" />
        </shape>
    </item>
</layer-list>
